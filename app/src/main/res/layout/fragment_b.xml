<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentB"
    android:background="@color/purple_200">
    <ImageButton
        android:id="@+id/btnFRTime"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="30dp"
        android:onClick="OrderByTime"
        android:layout_gravity="center_horizontal"
        android:src="@android:drawable/ic_menu_day"/>

    <ImageButton
        android:id="@+id/btnFRAlpha"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="30dp"
        android:onClick="OrderByName"
        android:layout_gravity="center_horizontal"
        android:src="@android:drawable/ic_menu_sort_alphabetically"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFRGroceryList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal|center_vertical"/>

</FrameLayout>